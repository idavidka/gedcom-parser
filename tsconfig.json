{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2020", "ES2021", "ES2023"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"types": ["node", "vitest/globals"],
		"incremental": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo"
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/__tests__/**",
		"tsup.config.ts"
	],
	"include": ["src/**/*"]
}
