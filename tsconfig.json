{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"ES2020",
			"ES2021",
			"ES2023"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": false,
		"target": "ES2020",
		"types": ["vitest/globals"]
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/__tests__/**"
	],
	"include": [
		"src/**/*"
	]
}